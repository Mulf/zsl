test_interp1()



function test_interp1()
    x = 0:pi/4:2*pi; 
    v = sin(x);
    xq = 0:pi/16:2*pi;
    figure
    vq1 = interp1(x,v,xq);
    plot(x,v,'o',xq,vq1,':.');
    xlim([0 2*pi]);
    title('(Default) Linear Interpolation');

    formatted_str = sprintf('%.4f,', vq1);
    formatted_str = formatted_str(1:end-1); 

    disp(formatted_str);
end
 
function test_pchip()
    x = -3:3; 
    y = [-1 -1 -1 0 1 1 1]; 
    xq1 = -3:.01:3;
    p = pchip(x,y,xq1);
    s = spline(x,y,xq1);
    m = makima(x,y,xq1);
    plot(x,y,'o',xq1,p,'-',xq1,s,'-.',xq1,m,'--')
    legend('Sample Points','pchip','spline','makima','Location','SouthEast')
end

function s = to_cpp_str(v)
    s = strjoin(arrayfun(@(x) num2str(x), v,'UniformOutput',false),',');
end